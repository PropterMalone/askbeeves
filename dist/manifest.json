{
  "manifest_version": 3,
  "name": "AskBeeves for Bluesky",
  "version": "1.0.0",
  "description": "See who you follow that blocks or is blocked by a profile",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://bsky.app/*",
    "https://bsky.social/*",
    "https://*.bsky.network/*",
    "https://public.api.bsky.app/*",
    "https://plc.directory/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://bsky.app/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}