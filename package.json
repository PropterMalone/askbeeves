{
  "name": "askbeeves",
  "version": "1.0.0",
  "description": "See who you follow that blocks or is blocked by a Bluesky profile",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "node scripts/bundle.js",
    "build:chrome": "node scripts/bundle.js --chrome",
    "build:firefox": "node scripts/bundle.js --firefox",
    "build:all": "node scripts/bundle.js --all",
    "dev": "node scripts/bundle.js --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
